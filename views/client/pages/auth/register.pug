doctype html
html
  head
    meta(charset="UTF-8")
    title Đăng ký độc giả
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet")
    link(href="/css/clientcss/register.css" rel="stylesheet")

    body
        .wrapper
            form#register-login(action=`${prefixUrl}/auth/register` method="post")
                h2
                    i.fas.fa-user-plus
                    |  Đăng ký độc giả

                .container_register
                    .container_left
                        .input-field
                            input(type="text" name="firstName" required)
                            label
                                i.fas.fa-user
                                |  Nhập họ
                        .input-field
                            input(type="text" name="lastName" required)
                            label
                                i.fas.fa-user
                                |  Nhập tên
                        .input-field
                            input(type="text" name="address" required)
                            label
                                i.fas.fa-map-marker-alt
                                |  Nhập địa chỉ
                        .input-field
                            input(type="text" name="phone" required)
                            label
                                i.fas.fa-phone
                                |  Nhập số điện thoại
                        .input-field
                            input(type="email" name="email" required)
                            label
                                i.fas.fa-envelope
                                |  Nhập email

                    .container_right
                        .input-field
                            input(type="text" name="citizenId" required)
                            label
                                i.fas.fa-id-card
                                |  Nhập số CMND
                        .input-field
                            select(name="gender" required)
                                option(value="1") Nam
                                option(value="0") Nữ
                            label
                                i.fas.fa-venus-mars
                                |  Giới tính
                        .input-field
                            input(type="date" name="dob" required)
                            label
                                i.fas.fa-calendar
                                |  Ngày sinh
                        .input-field
                            input(type="password" name="password" required oninput="checkPasswords()")
                            label
                                i.fas.fa-lock
                                |  Nhập mật khẩu
                        .input-field
                            input(type="password" name="repassword" required oninput="checkPasswords()")
                            label
                                i.fas.fa-lock
                                |  Nhập lại mật khẩu

                #password-message()
                    .message #{message}

                button(type="submit")
                    i.fas.fa-user-plus
                    |  Đăng ký

    script(src="/js/script.js")